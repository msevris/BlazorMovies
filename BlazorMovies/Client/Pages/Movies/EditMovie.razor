@page "/movies/edit/{MovieId:int}"

    <h3>Edit Movie</h3>

@if (Movie != null)
{
<MovieForm Movie="Movie" OnValidSubmit="Edit" NotSelectedGenres="NotSelectedGenres"
           SelectedGenres="SelectedGenres"></MovieForm>
}

@code {
    [Parameter] public int MovieId { get; set; }
    private Movie Movie { get; set; }

    private List<Genre> NotSelectedGenres = new List<Genre>()
    {
        new Genre(){Id = 2, Name = "Adventure"},
        new Genre(){Id = 3, Name = "Sci-Fi"}
    };

    private List<Genre> SelectedGenres = new List<Genre>()
    {
        new Genre(){Id = 1, Name = "Action"}
    };

    protected override void OnInitialized()
    {
        Movie = new Movie() { Id = MovieId, Title = "My Movie" };
    }

    private void Edit()
    {
        Console.WriteLine("editing movie ...");
    }
}
